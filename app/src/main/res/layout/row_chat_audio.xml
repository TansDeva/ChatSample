<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/chatItem"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ViewGroupChat"
            >

            <ImageView
                android:id="@+id/chatPlay"
                android:layout_width="@dimen/chat_audio_icon"
                android:layout_height="@dimen/chat_audio_icon"
                android:padding="@dimen/chat_audio_padding"
                android:src="@android:drawable/ic_media_play"
                app:tint="@color/black"
                />

            <TextView
                android:id="@+id/chatText"
                android:textColor="@color/black"
                android:textSize="@dimen/chat_text_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/chatTime"
                android:textColor="@color/black"
                android:textSize="@dimen/chat_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>